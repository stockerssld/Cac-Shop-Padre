<div class="container" style="padding-top: 5%">
    <div class="box">
        <h3 class="subtitle is-3" style="text-align: center">Log in</h3>
        <hr/>
        <div style="text-align-last: center">
        

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="field">
  <%= f.label :email, class:"subtitle is-5" %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>

<div class="field">
  <%= f.label :password, class:"subtitle is-5" %><br />
  <%= f.password_field :password, autocomplete: "current-password" %>
</div>

<% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
<% end %>

<div class="columns">
    <div class="column" style="text-align-last: right;">
      <div class="actions">
        <%= f.submit "Log in", class:"button is-success" %>
      </div>
    </div>
    <div class="column"style="text-align-last: left;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>



        
      </div>
        
    </div>
  </div>
  
